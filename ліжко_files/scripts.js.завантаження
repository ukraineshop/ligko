$(document).ready((function(){$("a[href^='#']").click((function(){var e=$(this).attr("href"),o=$(this).parent().find("h3").text();return $("#order_form select[name='type'] option[value='"+o+"']").prop("selected",!0),$("html, body").animate({scrollTop:$(e).offset().top+"px"}),!1}))})),$(window).on("load",(function(){$(".owl-carousel").owlCarousel({items:1,loop:!0,autoHeight:!0,smartSpeed:300,mouseDrag:!1,pullDrag:!1,nav:!0,navText:""})}));